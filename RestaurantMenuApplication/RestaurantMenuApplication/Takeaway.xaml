<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantMenuApplication.Takeaway"
             BackgroundColor="PaleVioletRed">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
            <!--Heading-->
            <Label Text="Takeaway Menu!!"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                    FontSize="45"
                    TextColor="BlanchedAlmond"/>

                <!--image to showcase the takeaway options-->
                <Image Aspect="AspectFit" 
                    Source="Assets/Images/fish.jpg"
                    HeightRequest="250"
                    WidthRequest="250"/>
                <!--Price and Name of meal-->
                <Label Text="Price: £8.50" TextColor="Black" 
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Bold"/>
                <Label Text="Battered Cod with Chips" 
                   TextColor="Black" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="Medium"
                   FontAttributes="Bold"/>
                <!--Button to order-->
                <Button Text="Order"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    WidthRequest="150"
                    HeightRequest="50"
                    FontSize="30"
                    TextColor="Black"
                    BackgroundColor="Beige"
                    BorderColor="Black"
                    BorderWidth="2"  
                    FontAttributes="Italic"
                    Clicked="Ordered1_Clicked"/>

                <!--image to showcase the takeaway-->
                <Image Aspect="AspectFit" 
                    Source="Assets/Images/friedRice.jpg"
                    HeightRequest="250"
                    WidthRequest="250"/>
                <!--Price and Name of takeaway-->
                <Label Text="Price: £9.99" TextColor="Black" 
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Bold"/>
