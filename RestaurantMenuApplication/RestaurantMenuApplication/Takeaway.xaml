                    HeightRequest="50"
                    FontSize="30"
                    TextColor="Black"
                    BackgroundColor="Beige"
                    BorderColor="Black"
                    BorderWidth="2"  
                    FontAttributes="Italic"
                    Clicked="Ordered2_Clicked"/>

                <!--image to showcase the takeaway-->
                <Image Aspect="AspectFit" 
                    Source="Assets/Images/noodles.jpg"
                    HeightRequest="250"
                    WidthRequest="250"/>
                <!--Price and Name of takeaway-->
                <Label Text="Price: £9.99" TextColor="Black" 
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Bold"/>
